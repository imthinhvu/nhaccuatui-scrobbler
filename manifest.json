{
  "manifest_version": 2,

  "name": "NhacCuaTui Scrobbler",
  "description": "This extension scrobbles currently playing music from NhacCuaTui to LastFM",
  "version": "0.1",
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "browser_action": {
    "default_icon": "icon-48.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs",
    "webNavigation",
    "http://www.last.fm/",
    "http://ws.audioscrobbler.com/"
  ],
  "background": {
    "scripts": [
      "vendor/jquery-3.2.1.min.js",
      "vendor/md5.min.js",
      "config.js",
      "lastfm.js",
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": ["http://www.nhaccuatui.com/*"],
      "js": [
        "vendor/jquery-3.2.1.min.js",
        "contentscript.js"
      ]
    }
  ],
  "web_accessible_resources": [
    "lastfm_cb.html"
  ]
}
